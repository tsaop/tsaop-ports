# Description: Sphinx theme for readthedocs.org
# URL: https://sphinx-rtd-theme.readthedocs.io/
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: python3-sphinx

name=python3-sphinx_rtd_theme
version=1.2.0
release=1
source=(https://github.com/readthedocs/${name/python3-/}/archive/${version}/${name/python3-/}-$version.tar.gz)

build() {
	cd ${name/python3-/}-$version
	python3 setup.py build
	python3 setup.py install --root=$PKG --optimize=1
}
