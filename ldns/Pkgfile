# Description: Useful DNS library
# URL: https://www.nlnetlabs.nl/projects/ldns/about/
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: glibc

name=ldns
version=1.7.1
release=1
source=(https://www.nlnetlabs.nl/downloads/ldns/ldns-1.7.1.tar.gz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--with-drill \
		--disable-static

	make
	make DESTDIR=$PKG install
}
