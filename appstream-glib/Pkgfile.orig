# Description: This library provides objects and helper methods to help reading and writing AppStream metadata
# URL: https://github.com/hughsie/appstream-glib
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on:gdk-pixbuf glib gtk-doc json-glib libffi libidn2 libpng libpsl libsoup libstemmer libunistring libxml2 libyaml sqlite3

name=appstream-glib
version=0.7.15
release=1
source=(https://github.com/hughsie/appstream-glib/archive/${name/-/_}_${version//./_}.tar.gz)

build() {
	cd $name-${name/-/_}_${version//./_}
	mkdir build; cd build

	meson .. --prefix=/usr \
		-Dbuilder=false \
		-Drpm=false \
		-Dgtk-doc=false

	DESTDIR=$PKG ninja install
	rm -rf $PKG/usr/share/locale
}
