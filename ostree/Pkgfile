# Description: Operating system and container binary deployment and upgrades
# URL: https://ostree.readthedocs.io/en/latest/
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: fuse gpgme gtk-doc libsoup

name=ostree
_realname=libostree
version=2019.2
release=1
source=(https://github.com/ostreedev/ostree/releases/download/v${version}/${_realname}-$version.tar.xz)

build() {
	cd ${_realname}-$version

	env NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr \
		--sysconfdir=/usr/etc \
		--libexecdir=/usr/lib \
		--with-openssl

	make
	make DESTDIR=$PKG install

	install -dm755 $PKG/etc
	mv $PKG/usr/etc/grub.d $PKG/etc
	find $PKG/usr/share/ostree -name "README*" -delete
}
