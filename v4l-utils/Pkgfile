# Description: media (V4L2, DVB and IR) applications and libraries 
# URL: https://linuxtv.org
# Maintainer: Tsaop, leeroy at cock dot li
# Depends on: glu hicolor-icon-theme libjpeg-turbo alsa-lib

name=v4l-utils
version=1.16.7
release=1
source=(https://linuxtv.org/downloads/$name/$name-$version.tar.bz2)

build() {
	cd $name-$version

#	export CFLAGS="-march=native -O2 -pipe"
#	export CXXFLAGS="-march=native -O2 -pipe"
#	export LDFLAGS="-no-pie"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-shared \
		--disable-nls \
		--disable-qv4l2 \
		--disable-static

	make
	make DESTDIR=$PKG install || true
	make DESTDIR=$PKG install || true
	make DESTDIR=$PKG install || true
}
