# Description: Library for the Command line MPD client
# URL:         http://www.musicpd.org/libs/libmpdclient
# Maintainer:  Tsaop, leeroy at cock dot li
# Depends on: meson ninja

name=libmpdclient
version=2.15
release=1
source=(http://www.musicpd.org/download/libmpdclient/2/libmpdclient-$version.tar.xz)

build() {
  mkdir build; cd build

  meson ../$name-$version --prefix /usr

  DESTDIR=$PKG ninja -j ${JOBS:-1} install
  rm -rf $PKG/usr/share
}
