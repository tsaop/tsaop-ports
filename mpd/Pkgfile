# Description:  Music playback daemon
# URL:          http://www.musicpd.org/
# Maintainer:   Tsaop, leeroy at cock dot li
# Depends on: audiofile boost faad2 ffmpeg glib lame libcdio-paranoia libid3tag libmad libsamplerate mpg123 opus wavpack

name=mpd
version=0.20.19
release=1
source=(https://www.musicpd.org/download/mpd/0.20/$name-$version.tar.xz mpd)

build() {
  cd $name-$version

  ./configure \
      --prefix=/usr \
      --sysconfdir=/usr/etc
  
  make
  make DESTDIR=$PKG install

  install -D $SRC/mpd $PKG/etc/rc.d/mpd

  rm -r $PKG/usr/share/doc
}
