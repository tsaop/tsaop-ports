# Description:  Music playback daemon
# URL:          http://www.musicpd.org/
# Maintainer:   Tsaop, leeroy at cock dot li
# Depends on: audiofile boost faad2 ffmpeg fluidsynth icu lame libao libcdio-paranoia libgcrypt libid3tag libmad libmikmod libmodplug libmpdclient libsamplerate mpg123 openal opus pulseaudio wavpack

name=mpd
version=0.21.6
release=1
source=(https://www.musicpd.org/download/mpd/0.21/$name-$version.tar.xz mpd)

build() {
  cd $name-$version
  mkdir obj; cd obj

  meson -Dprefix=/usr \
	..

  DESTDIR=$PKG ninja install

  install -D $SRC/mpd $PKG/etc/rc.d/mpd

  rm -r $PKG/usr/share/doc
}
